{
  "name": "root",
  "private": true,
  "devDependencies": {
    "eslint": "^7.27.0",
    "husky": "^6.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "precommit": "lint-staged",
    "format": "prettier --write \"packages/**/*.{js,json,yml,yaml,css,scss,ts,tsx,md}\"",
    "lint": "eslint packages/",
    "lint:fix": "npm run lint -- --fix"
  },
  "lint-staged": {
    "packages/**/*.{js,json,yml,yaml,css,scss,ts,tsx,md}": [
      "prettier --write"
    ],
    "packages/**/*.{js,ts}": [
      "eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
